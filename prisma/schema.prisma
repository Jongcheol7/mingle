generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique
  email     String   @unique
  name      String
  username  String   @unique
  imageUrl  String
  createdAt DateTime @default(now())

  posts    Post[]
  likes    Like[]
  comments Comment[]
  commentLike CommentLike[]
  message  Message[]
  chatRoomMember ChatRoomMember[]
}

model Post {
  id        Int      @id @default(autoincrement())
  userId    String
  title     String
  content   String
  createdAt DateTime @default(now())

  user     User        @relation(fields: [userId], references: [clerkId])
  medias   PostMedia[]
  likes    Like[]
  comments Comment[]
  postTags PostTag[]
  
}

model PostMedia {
  id        Int       @id @default(autoincrement())
  postId    Int
  type      MediaType
  url       String
  assetId   String?
  order     Int
  createdAt DateTime  @default(now())

  post Post @relation(fields: [postId], references: [id])
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  postTags PostTag[]
}

model PostTag {
  postId Int
  tagId  Int

  post Post @relation(fields: [postId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([postId, tagId])
}

model Like {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [clerkId])
  post   Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int
  content   String
  createdAt DateTime @default(now())
  parentId  Int? 

  user    User @relation(fields: [userId], references: [clerkId])
  post    Post @relation(fields: [postId], references: [id])
  parent  Comment? @relation("CommentRelation", fields:[parentId], references:[id])
  replies Comment[] @relation("CommentRelation")
  likes   CommentLike[]
}

model CommentLike {
  id        Int   @id @default(autoincrement())
  userId    String 
  commentId Int 
  createdAt DateTime  @default(now())

  user    User  @relation(fields:[userId], references:[clerkId])
  comment Comment @relation(fields:[commentId], references:[id])
  @@unique([userId, commentId])
}

enum MediaType {
  IMAGE
  VIDEO
}

model ChatRoom {
  id        Int       @id @default(autoincrement())
  roomName  String?
  isDirect  Boolean
  createdAt DateTime  @default(now())

  chatRoomMember ChatRoomMember[]
  message  Message[]
}

model ChatRoomMember {
  id        Int      @id @default(autoincrement())
  userId    String 
  roomId    Int
  createdAt DateTime @default(now())

  @@unique([userId, roomId])
  chatRoom  ChatRoom  @relation(fields:[roomId], references:[id])
  user      User      @relation(fields:[userId], references:[clerkId])
}

model Message {
  id        Int       @id @default(autoincrement())
  roomId    Int
  senderId  String 
  message   String 
  createdAt DateTime  @default(now())

  sender    User      @relation(fields:[senderId], references:[clerkId])
  chatRoom  ChatRoom  @relation(fields:[roomId], references:[id])
}
